{
  "name": "Job Application Autofill",
  "description": "Automatically fill job application forms with saved profile data",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Application Autofill"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["context.js", "content.js"]
    },
    {
      "matches": [
        "*://*.myworkdayjobs.com/*",
        "*://*.workday.com/*"
      ],
      "js": ["workday-dynamic.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}